<IfModule mod_rewrite.c>
    RewriteEngine On

    # If you installed LavaLust in a subfolder, set it here:
    # Example: RewriteBase /acedillo_shaneChristia/public/
    # Otherwise leave it commented if app is at root

    # Redirect all requests to index.php if file/folder doesn't exist
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
